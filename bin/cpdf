#! /bin/bash
# compress, optimize and transform into PDF/A-1b

# dependency : ghostscript (gs), version >= 9.19
# usage      : $ cpdf input.pdf output.pdf

gs -sDEVICE=pdfwrite -dBATCH -dNOPAUSE -dSAFER -sProcessColorModel=DeviceRGB -sColorConversionStrategy=UseDeviceIndependentColor \
   -r150 -dEmbedAllFonts=true -dPDFA -dPDFACompatibilityPolicy=1 -dDetectDuplicateImages=true -dFastWebView=true -sOutputFile=$2 $1
   #-dEmbedAllFonts=true -dPDFA -dPDFACompatibilityPolicy=1 -dDetectDuplicateImages=true -dFastWebView=true -sOutputFile=$2 $1
