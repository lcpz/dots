color index       brightmagenta  default  "~F"
color index       magenta        default  "~T"
color index       brightgreen    default  "~N|~O"
color index       brightred      default  "~D"

color body        green          default  "(https|http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body        green          default  "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"

color body        magenta        default  "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
